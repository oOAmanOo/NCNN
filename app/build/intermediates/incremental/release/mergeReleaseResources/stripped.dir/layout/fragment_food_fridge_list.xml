<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/fragment_food_fridge_list_back"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/top_back1"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/fragment_food_fridge_list_pic"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:background="@drawable/banana" />

            <TextView
                android:id="@+id/fragment_food_fridge_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="11"
                android:textColor="@color/font_b"
                android:textSize="14sp" />


        </LinearLayout>


        <Button
            android:id="@+id/fragment_food_fridge_list_check"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="查看食譜"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>




    <com.tencent.nanodetncnn.fridge.FoodFridgeListAdapter
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_food_fridge_list_Adapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
