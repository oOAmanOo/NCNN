<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_video_large_grid_list_item_all"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/adapter_food_fridge_list_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_food_fridge_list_item_amount"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="22"
            android:textColor="@color/font_b"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/adapter_food_fridge_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="22"
            android:gravity="center"
            android:textColor="@color/font_b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adapter_food_fridge_list_item_own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11"
            android:gravity="center"
            android:textColor="@color/font_b"
            android:textSize="14sp" />




        <TextView
            android:id="@+id/adapter_food_fridge_list_item_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/font_b"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>
