<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:foregroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="新增待辦清單"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dialog_card"
            android:foregroundTint="@color/dialog_card"
            app:cardBackgroundColor="@color/dialog_card">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="To..."
                android:textColor="@android:color/secondary_text_dark_nodisable"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/ef4_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:text="提醒時間"
                android:textColor="@android:color/secondary_text_dark_nodisable"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="43dp"
                android:ems="5"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ef4_time_textview"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="110dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="20:00"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp"
                android:translationY="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                android:text="待辦清單內容"
                android:textColor="@android:color/secondary_text_light_nodisable"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ef4_remark_edittext"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autoText="false"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:editable="true"
                android:ems="10"
                android:enabled="true"
                android:fontFamily="sans-serif-medium"
                android:foregroundTint="@color/white"
                android:inputType="textMultiLine|textPersonName"
                android:linksClickable="true"
                android:longClickable="true"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:text="#"
                android:textAlignment="textStart"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp"
                android:translationZ="10dp"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:translationZ="-30dp"
            app:cardBackgroundColor="#00FFFFFF">

            <Button
                android:id="@+id/ef4_next_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight=".50"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:forceHasOverlappingRendering="false"
                android:gravity="center"
                android:text="確定"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="15sp"
                android:typeface="normal" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>