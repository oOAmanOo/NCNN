<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/d2_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/dialog_card">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:translationZ="-10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <ImageView
                    android:id="@+id/d2_imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/d2_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="55dp"
                    android:text="青椒"
                    android:textColor="#00455F"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/d2_Position_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="85dp"
                android:text="位置"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/d2_Position_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="30dp"
                android:entries="@array/fridge"
                android:fontFamily="sans-serif-medium"
                android:textSize="8sp" />


            <TextView
                android:id="@+id/Amount_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="180dp"
                android:text="數量"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/d2_Number_plaintext"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="180dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="numberSigned"
                android:text="Num"
                android:textAlignment="textStart"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/expireddate_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="60dp"
                android:text="過期日期"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d2_expireddate_date"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp"
                android:translationZ="10dp" />

            <EditText
                android:id="@+id/d2_expireddate_date_2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="70dp"
                android:clickable="false"
                android:contextClickable="false"
                android:fontFamily="sans-serif-medium"
                android:linksClickable="false"
                android:longClickable="false"
                android:textColor="@android:color/secondary_text_light"
                android:textIsSelectable="false"
                android:textSize="14sp"
                android:translationZ="-10dp" />

            <TextView
                android:id="@+id/remark_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="60dp"
                android:text="備註"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/d2_remark_plaintext"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="70dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp"
                android:translationZ="-10dp"
                android:visibility="visible"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/d2_remark_plaintext_2"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="75dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp"
                android:translationZ="10dp"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</FrameLayout>