<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/detected_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/dialog_card">

            <EditText
                android:id="@+id/d2_remark_plaintext"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="90dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/d2_expireddate_date"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="90dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/remark_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="75dp"
                android:text="備註"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expireddate_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="75dp"
                android:text="過期日期"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/d2_position_plaintext"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="220dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:text="Pos"
                android:textAlignment="viewStart"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/d2_Number_plaintext"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="100dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:inputType="text"
                android:text="Num"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Amount_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="100dp"
                android:text="數量"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Position_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="220dp"
                android:text="位置"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:translationZ="-10dp"
                app:cardBackgroundColor="#00FFFFFF">

                <ImageView
                    android:id="@+id/d2_imageView"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/d2_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="100dp"
                    android:text="青椒"
                    android:textColor="#00455F"
                    android:textSize="24sp" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</FrameLayout>